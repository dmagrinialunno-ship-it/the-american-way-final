{
  "version": 2,
  "builds": [
    { "src": "backend/index.py", "use": "@vercel/python" },
    { "src": "frontend/*.html", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "backend/index.py" },
    { "source": "/admin", "destination": "frontend/admin.html" },
    { "source": "/(.*)", "destination": "frontend/index.html" }
  ]
}
